    <% menu.forEach(item => { %>
        <% if (item.category === 'Desserts') { %>
            <li>
                <h3><%= item.name%></h3>
                <p>Price: $<%= item.price.toFixed(2)%></p>
                <p>Rating:<%= item.rating%>/5</p>
