  <title>Menu</title>
</head>
<body>
  <%- include('./partials/nav') %>

    <nav>
    <a href="/">Home</a>
    <a href="/menu">Full Menu</a>
  </nav>
  <h1>Full Menu</h1>

  <!---Render the Mains-->
  <h2>Mains</h2>
  <ul>
    <% menu.forEach(item => { %>
        <% if (item.category === 'Mains') {
        <li>
            <h3><%= item.name %></h3>
            <p>Price: $<% item.price.toFixed(2)%></p>
            <p>Rating: <% item.rating%>/5</p>
            <p>Details:<%= item.details%></p>
        </li>  
     <%   } %>
   <% }) %>
   <!--Render Sides-->
   <h2>Sides</h2>
   <% menu.forEach(item => { %>
